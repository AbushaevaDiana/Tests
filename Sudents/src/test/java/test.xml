    </test>
    <test name="Авторизация с существующими подходящими паролем и логином(с пробелом в середине пароля)" >
        <parameter name="login" value="Test7748"/>
        <parameter name="password" value="123 Тест12"/>
        <classes>
            <class name="LoginTest"/>
        </classes>
    </test>
</suite>